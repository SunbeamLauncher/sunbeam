{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "detail"
            ]
        },
        "text": {
            "type": "string"
        },
        "markdown": {
            "type": "string"
        },
        "actions": {
            "type": "array",
            "items": {
                "$ref": "./action.schema.json"
            }
        }
    },
    "not": {
        "required": [
            "type",
            "text",
            "markdown"
        ]
    }
}

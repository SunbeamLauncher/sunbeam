{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "oneOf": [
        {
            "$ref": "#/definitions/list"
        },
        {
            "$ref": "#/definitions/detail"
        },
        {
            "$ref": "#/definitions/form"
        }
    ],
    "definitions": {
        "list": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "items"
            ],
            "properties": {
                "type": {
                    "const": "list",
                    "description": "The type of the page."
                },
                "items": {
                    "description": "The items in the list.",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/listitem"
                    }
                }
            }
        },
        "detail": {
            "type": "object",
            "additionalProperties": false,
            "description": "A detail view displaying a preview and actions.",
            "required": [
                "type",
                "text"
            ],
            "properties": {
                "type": {
                    "description": "The type of the page.",
                    "const": "detail"
                },
                "language": {
                    "type": "string"
                },
                "text": {
                    "description": "The text to show in the detail view.",
                    "type": "string"
                },
                "actions": {
                    "type": "array",
                    "description": "The actions attached to the detail view.",
                    "items": {
                        "$ref": "#/definitions/action"
                    }
                }
            }
        },
        "form": {
            "type": "object",
            "required": [
                "type",
                "items"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "const": "form",
                    "description": "The type of the page."
                },
                "inputs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/input"
                    }
                }
            }
        },
        "listitem": {
            "additionalProperties": false,
            "required": [
                "title"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "description": "The title of the item."
                },
                "id": {
                    "type": "string",
                    "description": "The id of the item."
                },
                "subtitle": {
                    "type": "string",
                    "description": "The subtitle of the item."
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "The accessories to show on the right side of the item."
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/action"
                    },
                    "description": "The actions attached to the item."
                }
            }
        },
        "input": {
            "oneOf": [
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "type": {
                            "const": "textfield",
                            "description": "The type of the input."
                        },
                        "placeholder": {
                            "type": "string",
                            "description": "The placeholder of the input."
                        },
                        "default": {
                            "type": "string",
                            "description": "The default value of the input."
                        },
                        "secure": {
                            "type": "boolean",
                            "description": "Whether the input should be secure."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "type": {
                            "const": "checkbox",
                            "description": "The type of the input."
                        },
                        "default": {
                            "type": "boolean",
                            "description": "The default value of the input."
                        },
                        "label": {
                            "type": "string",
                            "description": "The label of the input."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "type": {
                            "const": "textarea",
                            "description": "The type of the input."
                        },
                        "placeholder": {
                            "type": "string",
                            "description": "The placeholder of the input."
                        },
                        "default": {
                            "type": "string",
                            "description": "The default value of the input."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type",
                        "items"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "type": {
                            "const": "dropdown",
                            "description": "The type of the input."
                        },
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "value"
                                ],
                                "additionalProperties": false,
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "description": "The title of the item."
                                    },
                                    "value": {
                                        "type": "string",
                                        "description": "The value of the item."
                                    }
                                }
                            },
                            "description": "The items of the input."
                        },
                        "default": {
                            "type": "string",
                            "description": "The default value of the input."
                        }
                    }
                }
            ]
        },
        "action": {
            "type": "object",
            "required": [
                "title",
                "command"
            ],
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string",
                    "description": "The title of the action."
                },
                "key": {
                    "type": "string",
                    "description": "The key used as a shortcut."
                },
                "onAction": {
                    "$ref": "#/definitions/command"
                }
            }
        },
        "command": {
            "oneOf": [
                {
                    "required": [
                        "type",
                        "text"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "copy",
                            "description": "The type of the action."
                        },
                        "exit": {
                            "type": "boolean",
                            "description": "Whether to exit the app after copying."
                        },
                        "text": {
                            "type": "string",
                            "description": "The text to copy."
                        }
                    }
                },
                {
                    "required": [
                        "type",
                        "url"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "open",
                            "description": "The type of the action."
                        },
                        "exit": {
                            "type": "boolean",
                            "description": "Whether to exit the app after opening."
                        },
                        "url": {
                            "type": "string",
                            "description": "The url to open."
                        }
                    }
                },
                {
                    "required": [
                        "type",
                        "origin"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "run",
                            "description": "The type of the action."
                        },
                        "name": {
                            "type": "string",
                            "description": "The name of the command to run."
                        },
                        "origin": {
                            "type": "string",
                            "description": "The origin of the command to run."
                        },
                        "params": {
                            "type": "object",
                            "description": "The parameters to pass to the command."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "reload"
                        },
                        "params": {
                            "type": "object",
                            "description": "The parameters to pass to the command."
                        }
                    }
                }
            ]
        }
    }
}

{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "page",
    "oneOf": [
        {
            "$ref": "#/$defs/list"
        },
        {
            "$ref": "#/$defs/detail"
        },
        {
            "$ref": "#/$defs/form"
        }
    ],
    "$defs": {
        "list": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "items"
            ],
            "properties": {
                "title": {
                    "description": "The title of the page.",
                    "type": "string"
                },
                "emptyView": {
                    "type": "object",
                    "required": [
                        "text"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "text": {
                            "type": "string",
                            "description": "The text to show when the list is empty."
                        },
                        "actions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/action"
                            },
                            "description": "The actions to show when the list is empty."
                        }
                    }
                },
                "items": {
                    "description": "The items in the list.",
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/listitem"
                    }
                }
            }
        },
        "detail": {
            "type": "object",
            "additionalProperties": false,
            "description": "A detail view displaying a preview and actions.",
            "required": [
                "text"
            ],
            "properties": {
                "title": {
                    "description": "The title of the page.",
                    "type": "string"
                },
                "language": {
                    "type": "string"
                },
                "text": {
                    "description": "The text to show in the detail view.",
                    "type": "string"
                },
                "actions": {
                    "type": "array",
                    "description": "The actions attached to the detail view.",
                    "items": {
                        "$ref": "#/$defs/action"
                    }
                }
            }
        },
        "form": {
            "type": "object",
            "required": [
                "command",
                "items"
            ],
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string",
                    "description": "The title of the page."
                },
                "command": {
                    "$ref": "#/$defs/command"
                },
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/formitem"
                    }
                }
            }
        },
        "listitem": {
            "additionalProperties": false,
            "required": [
                "title"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "description": "The title of the item."
                },
                "id": {
                    "type": "string",
                    "description": "The id of the item."
                },
                "subtitle": {
                    "type": "string",
                    "description": "The subtitle of the item."
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "The accessories to show on the right side of the item."
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/action"
                    },
                    "description": "The actions attached to the item."
                }
            }
        },
        "action": {
            "oneOf": [
                {
                    "required": [
                        "type",
                        "text"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "copy",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "text": {
                            "type": "string",
                            "description": "The text to copy."
                        },
                        "key": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 1,
                            "description": "The key used as a shortcut."
                        }
                    }
                },
                {
                    "required": [
                        "type",
                        "url"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "open",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "key": {
                            "type": "string",
                            "description": "The key used as a shortcut."
                        },
                        "url": {
                            "type": "string",
                            "description": "The url to open."
                        }
                    }
                },
                {
                    "required": [
                        "type",
                        "command"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "run",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "key": {
                            "type": "string",
                            "description": "The key used as a shortcut."
                        },
                        "command": {
                            "$ref": "#/$defs/command"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "type",
                        "command"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "key": {
                            "type": "string",
                            "description": "The key used as a shortcut."
                        },
                        "type": {
                            "type": "string",
                            "const": "push"
                        },
                        "command": {
                            "$ref": "#/$defs/command"
                        }
                    }
                }
            ]
        },
        "formitem": {
            "oneOf": [
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "type": {
                            "const": "textfield",
                            "description": "The type of the input."
                        },
                        "placeholder": {
                            "type": "string",
                            "description": "The placeholder of the input."
                        },
                        "default": {
                            "type": "string",
                            "description": "The default value of the input."
                        },
                        "secure": {
                            "type": "boolean",
                            "description": "Whether the input should be secure."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "type": {
                            "const": "checkbox",
                            "description": "The type of the input."
                        },
                        "default": {
                            "type": "boolean",
                            "description": "The default value of the input."
                        },
                        "label": {
                            "type": "string",
                            "description": "The label of the input."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "type": {
                            "const": "textarea",
                            "description": "The type of the input."
                        },
                        "placeholder": {
                            "type": "string",
                            "description": "The placeholder of the input."
                        },
                        "default": {
                            "type": "string",
                            "description": "The default value of the input."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type",
                        "items"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "type": {
                            "const": "dropdown",
                            "description": "The type of the input."
                        },
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "value"
                                ],
                                "additionalProperties": false,
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "description": "The title of the item."
                                    },
                                    "value": {
                                        "type": "string",
                                        "description": "The value of the item."
                                    }
                                }
                            },
                            "description": "The items of the input."
                        },
                        "default": {
                            "type": "string",
                            "description": "The default value of the input."
                        }
                    }
                }
            ]
        },
        "params": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                ".+": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "boolean"
                        }
                    ]
                }
            }
        },
        "command": {
            "type": "object",
            "required": [
                "name"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "params": {
                    "$ref": "#/$defs/params"
                }
            }
        }
    }
}

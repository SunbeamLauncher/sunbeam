{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "title",
        "items",
        "commands"
    ],
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string"
        },
        "items": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/item"
            }
        },
        "homepage": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "commands": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "$ref": "#/definitions/command"
                }
            }
        }
    },
    "definitions": {
        "item": {
            "type": "object",
            "required": [
                "command"
            ],
            "additionalProperties": false,
            "properties": {
                "command": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "params": {
                    "type": "object",
                    "patternProperties": {
                        ".+": {
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "boolean"
                                }
                            ]
                        }
                    }
                }
            }
        },
        "command": {
            "type": "object",
            "required": [
                "title",
                "mode"
            ],
            "additionalProperties": false,
            "properties": {
                "mode": {
                    "enum": [
                        "page",
                        "action",
                        "silent"
                    ]
                },
                "title": {
                    "type": "string"
                },
                "params": {
                    "type": "object",
                    "patternProperties": {
                        ".+": {
                            "type": "object",
                            "required": [
                                "type"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "string",
                                        "boolean"
                                    ]
                                },
                                "optional": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                },
                "prefs": {
                    "type": "object",
                    "patternProperties": {
                        ".+": {
                            "type": "object",
                            "required": [
                                "type"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "string",
                                        "boolean"
                                    ]
                                },
                                "optional": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

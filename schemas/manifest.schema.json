{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "title",
        "commands"
    ],
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "entrypoint": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "commands": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/command"
            }
        }
    },
    "$defs": {
        "command": {
            "oneOf": [
                {
                    "type": "object",
                    "required": [
                        "name",
                        "mode",
                        "title"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "title": {
                            "type": "string"
                        },
                        "mode": {
                            "type": "string",
                            "enum": [
                                "filter",
                                "generator",
                                "detail",
                                "form",
                                "silent"
                            ]
                        },
                        "params": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/param"
                            }
                        }
                    }
                }
            ]
        },
        "param": {
            "type": "object",
            "required": [
                "name",
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "string",
                        "boolean"
                    ]
                },
                "optional": {
                    "type": "boolean"
                }
            }
        }
    }
}

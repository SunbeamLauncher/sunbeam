{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "page",
    "oneOf": [
        {
            "$ref": "#/$defs/list"
        },
        {
            "$ref": "#/$defs/detail"
        }
    ],
    "$defs": {
        "list": {
            "type": "object",
            "required": [
                "type"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "description": "The type of the response.",
                    "const": "list"
                },
                "title": {
                    "description": "The title of the page.",
                    "type": "string"
                },
                "onQueryChange": {
                    "$ref": "#/$defs/command"
                },
                "emptyView": {
                    "type": "object",
                    "required": [
                        "text"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "text": {
                            "type": "string",
                            "description": "The text to show when the list is empty."
                        },
                        "actions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/action"
                            },
                            "description": "The actions to show when the list is empty."
                        }
                    }
                },
                "items": {
                    "oneOf": [
                        {
                            "description": "The items in the list.",
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/listitem"
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        },
        "detail": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type"
            ],
            "description": "A detail view displaying a preview and actions.",
            "properties": {
                "type": {
                    "description": "The type of the response.",
                    "const": "detail"
                },
                "title": {
                    "description": "The title of the page.",
                    "type": "string"
                },
                "highlight": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "actions": {
                    "type": "array",
                    "description": "The actions attached to the detail view.",
                    "items": {
                        "$ref": "#/$defs/action"
                    }
                }
            }
        },
        "listitem": {
            "additionalProperties": false,
            "required": [
                "title"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "description": "The title of the item."
                },
                "id": {
                    "type": "string",
                    "description": "The id of the item."
                },
                "subtitle": {
                    "type": "string",
                    "description": "The subtitle of the item."
                },
                "accessories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "The accessories to show on the right side of the item."
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/action"
                    },
                    "description": "The actions attached to the item."
                }
            }
        },
        "action": {
            "oneOf": [
                {
                    "required": [
                        "type",
                        "text"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "copy",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "text": {
                            "type": "string",
                            "description": "The text to copy."
                        },
                        "key": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 1,
                            "description": "The key used as a shortcut."
                        }
                    }
                },
                {
                    "required": [
                        "type",
                        "text"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "paste",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "text": {
                            "type": "string",
                            "description": "The text to paste."
                        },
                        "key": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 1,
                            "description": "The key used as a shortcut."
                        }
                    }
                },
                {
                    "required": [
                        "type",
                        "expression"
                    ],
                    "additionalProperties": false,
                    "description": "Eval code on val.town",
                    "properties": {
                        "type": {
                            "const": "eval",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "expression": {
                            "$ref": "#/$defs/expression"
                        },
                        "onSuccess": {
                            "$ref": "#/$defs/onSuccess"
                        },
                        "key": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 1,
                            "description": "The key used as a shortcut."
                        }
                    }
                },
                {
                    "required": [
                        "type",
                        "target"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "open",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "key": {
                            "type": "string",
                            "description": "The key used as a shortcut."
                        },
                        "target": {
                            "type": "string",
                            "description": "The target to open."
                        }
                    }
                },
                {
                    "required": [
                        "type",
                        "command"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "reload",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "key": {
                            "type": "string",
                            "description": "The key used as a shortcut."
                        },
                        "command": {
                            "$ref": "#/$defs/command"
                        }
                    }
                },
                {
                    "required": [
                        "type",
                        "command"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "exec",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "key": {
                            "type": "string",
                            "description": "The key used as a shortcut."
                        },
                        "command": {
                            "$ref": "#/$defs/command"
                        },
                        "onSuccess": {
                            "$ref": "#/$defs/onSuccess"
                        }
                    }
                },
                {
                    "required": [
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "push",
                            "description": "The type of the action."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the action."
                        },
                        "key": {
                            "type": "string",
                            "description": "The key used as a shortcut."
                        },
                        "command": {
                            "$ref": "#/$defs/command"
                        },
                        "target": {
                            "type": "string"
                        },
                        "page": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "input": {
            "oneOf": [
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "type": {
                            "const": "textfield",
                            "description": "The type of the input."
                        },
                        "placeholder": {
                            "type": "string",
                            "description": "The placeholder of the input."
                        },
                        "optional": {
                            "type": "boolean",
                            "description": "Whether the input is optional."
                        },
                        "default": {
                            "type": "string",
                            "description": "The default value of the input."
                        },
                        "secure": {
                            "type": "boolean",
                            "description": "Whether the input should be secure."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "optional": {
                            "type": "boolean",
                            "description": "Whether the input is optional."
                        },
                        "type": {
                            "const": "checkbox",
                            "description": "The type of the input."
                        },
                        "default": {
                            "type": "boolean",
                            "description": "The default value of the input."
                        },
                        "label": {
                            "type": "string",
                            "description": "The label of the input."
                        },
                        "trueSubstitution": {
                            "type": "string",
                            "description": "The text substitution to use when the input is true."
                        },
                        "falseSubstitution": {
                            "type": "string",
                            "description": "The text substitution to use when the input is false."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "type": {
                            "const": "textarea",
                            "description": "The type of the input."
                        },
                        "optional": {
                            "type": "boolean",
                            "description": "Whether the input is optional."
                        },
                        "placeholder": {
                            "type": "string",
                            "description": "The placeholder of the input."
                        },
                        "default": {
                            "type": "string",
                            "description": "The default value of the input."
                        }
                    }
                },
                {
                    "type": "object",
                    "required": [
                        "name",
                        "title",
                        "type",
                        "items"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the input."
                        },
                        "title": {
                            "type": "string",
                            "description": "The title of the input."
                        },
                        "optional": {
                            "type": "boolean",
                            "description": "Whether the input is optional."
                        },
                        "type": {
                            "const": "dropdown",
                            "description": "The type of the input."
                        },
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "value"
                                ],
                                "additionalProperties": false,
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "description": "The title of the item."
                                    },
                                    "value": {
                                        "type": "string",
                                        "description": "The value of the item."
                                    }
                                }
                            },
                            "description": "The items of the input."
                        },
                        "default": {
                            "type": "string",
                            "description": "The default value of the input."
                        }
                    }
                }
            ]
        },
        "command": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "args": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "boolean"
                            },
                            {
                                "$ref": "#/$defs/input"
                            }
                        ]
                    }
                }
            }
        },
        "onSuccess": {
            "type": "string",
            "enum": [
                "copy",
                "paste",
                "open",
                "reload"
            ]
        }
    }
}
